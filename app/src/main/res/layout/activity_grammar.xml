<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tutorial.diwan.grammar.Grammar"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="348dp"
        android:layout_height="187dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grammar2" />

    <Button
        android:layout_width="313dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Simple Present Tense"
        android:textAlignment="gravity"
        android:textSize="24dp"
        android:id="@+id/satu_satu"
        android:onClick="present"/>

    <Button
        android:layout_width="313dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Simple Past Tense"
        android:textAlignment="gravity"
        android:textSize="24dp"
        android:id="@+id/satu_dua"
        android:onClick="past"/>

    <Button
        android:layout_width="314dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Simple Future Tense"
        android:textAlignment="gravity"
        android:textSize="24dp"
        android:id="@+id/satu_tiga"
        android:onClick="future"/>



</LinearLayout>
